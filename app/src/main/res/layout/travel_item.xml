<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/travel_item_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/travel_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TravelItemStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/travel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TravelItemStyle"
        app:layout_constraintStart_toEndOf="@id/travel_id"
        app:layout_constraintEnd_toStartOf="@id/travel_sum"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/travel_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TravelItemStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>